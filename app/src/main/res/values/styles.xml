<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="headerStyle">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/medium_text</item>
    </style>

    <style name="footerStyle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/small_text</item>
    </style>

    <style name="emoticonStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/medium</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/colorWhite</item>
    </style>

    <style name="moodbarStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/medium</item>
        <item name="android:layout_weight">2</item>
        <item name="android:max">10</item>
        <item name="android:thumbTint">@color/colorWhite</item>
    </style>

    <style name="controlStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundTint">@color/colorWhite</item>
    </style>

    <style name="nowPlayingStyleMain">
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/large_text</item>
    </style>

    <style name="nowPlayingStyleSecondary">
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/medium_text</item>
    </style>

</resources>
